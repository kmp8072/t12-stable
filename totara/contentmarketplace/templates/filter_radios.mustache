{{!
    @template totara_contentmarketplace/filter_radios

    Content Marketplace explorer filter control

    Example context (json):
    {
        "name": "avaliablity",
        "options": [
            {
                "label": "All",
                "value": "all",
                "count": "12,345",
                "checked": true,
            },
            {
                "label": "Subscription",
                "value": "subscribed",
                "count": "1,234",
                "checked": false,
            },
            {
                "label": "Collection",
                "value": "collection",
                "count": "123",
                "checked": false,
            }
        ]
    }

}}
<div>
    {{#options}}
        <div class="totara_form_element_radios_radio clearfix">
            <input id="{{htmlid}}" type="radio" name="{{name}}" value="{{value}}" {{#checked}}checked{{/checked}}/>
            <label for="{{htmlid}}">
                {{label}}
                <span title="{{#str}} total, totara_contentmarketplace {{/str}}" class="pull-right tcm-filter-option-count">{{formatcount}}</span>
            </label>
        </div>
    {{/options}}
</div>
